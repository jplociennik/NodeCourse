<!-- Examples of how to use the new filtering system -->

<!-- Example 1: Only Search -->
<div class="row mb-4">
    <div class="col-md-6">
        <h4>Tylko wyszukiwanie</h4>
        <%- include('../views/partials/filtering/main-filter', { 
            config: {
                features: ['search'],
                title: 'Wyszukiwanie',
                searchConfig: {
                    placeholder: 'Szukaj produktów...',
                    label: 'Znajdź produkt'
                },
                showStatistics: false
            }
        }) %>
    </div>
</div>

<!-- Example 2: Only Sort -->
<div class="row mb-4">
    <div class="col-md-6">
        <h4>Tylko sortowanie</h4>
        <%- include('../views/partials/filtering/main-filter', { 
            config: {
                features: ['sort'],
                title: 'Sortowanie',
                sortConfig: {
                    label: 'Sortuj według',
                    options: [
                        { value: 'name|asc', label: 'Nazwa A-Z' },
                        { value: 'name|desc', label: 'Nazwa Z-A' },
                        { value: 'price|asc', label: 'Cena rosnąco' },
                        { value: 'price|desc', label: 'Cena malejąco' }
                    ]
                },
                showStatistics: false
            }
        }) %>
    </div>
</div>

<!-- Example 3: Search + Sort + Stats -->
<div class="row mb-4">
    <div class="col-md-6">
        <h4>Kompletny system</h4>
        <%- include('../views/partials/filtering/main-filter', { 
            config: {
                features: ['search', 'sort'],
                title: 'Wyszukiwanie i sortowanie',
                searchConfig: {
                    placeholder: 'Szukaj zadań...',
                    label: 'Znajdź zadanie'
                },
                sortConfig: {
                    label: 'Sortuj według',
                    options: [
                        { value: 'taskName|asc', label: 'Nazwa A-Z' },
                        { value: 'taskName|desc', label: 'Nazwa Z-A' },
                        { value: 'dateFrom|asc', label: 'Data rosnąco' },
                        { value: 'dateFrom|desc', label: 'Data malejąco' }
                    ]
                },
                showStatistics: true
            }
        }) %>
    </div>
</div>

<!-- Example 4: Simple independent searchbar -->
<div class="row mb-4">
    <div class="col-md-6">
        <h4>Prosty searchbar (niezależny)</h4>
        <div class="card">
            <div class="card-body">
                <%- include('../views/partials/filtering/simple-searchbar', { 
                    config: {
                        placeholder: 'Wpisz cokolwiek...'
                    }
                }) %>
            </div>
        </div>
        <!-- Include standalone search script -->
        <script src="/js/filtering/search-module.js"></script>
        <script src="/js/standalone-search.js"></script>
    </div>
</div> 