<%
const searchConfig = {
    placeholder: 'Szukaj...',
    ...config
};
%>

<div class="d-flex search-container">
    <input type="text" 
           id="searchInput" 
           name="q" 
           class="form-control search-input" 
           value="<%= query.q || '' %>" 
           placeholder="<%= searchConfig.placeholder %>">
    <button type="button" id="searchBtn" class="btn btn-success ms-2 bi bi-search" > Szukaj </button>
</div> 