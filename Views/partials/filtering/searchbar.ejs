<%
const searchConfig = {
    placeholder: 'Szukaj...',
    ...config
};
%>

<div class="d-flex search-container">
    <input type="text" 
           id="searchInput" 
           name="q" 
           class="form-control search-input" 
           value="<%= query.q || '' %>" 
           placeholder="<%= searchConfig.placeholder %>">
    <button type="button" 
            class="btn btn-success ms-2" 
            onclick="applyFilters()">
        <i class="bi bi-search"></i> Szukaj
    </button>
</div> 