<div class="card">
    <div class="card-header bg-success text-white">
        <h2 class="mb-0"><i class="bi bi-person"></i> Profil użytkownika</h2>
    </div>
    <div class="card-body">
        <h3 class="text-success"><%= user.name %></h3>
        <p class="lead">ID użytkownika: <span class="badge bg-success"><%= user.id %></span></p>
        <div class="d-grid gap-2 d-md-flex profile-actions">
            <a href="/profile/<%= user.id %>/szczegoly" class="btn btn-success">
                <i class="bi bi-info-circle"></i> Zobacz szczegóły
            </a>
            <a href="/profile" class="btn btn-outline-success">
                <i class="bi bi-arrow-left"></i> Powrót do listy
            </a>
        </div>
    </div>
</div> 