<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="auth-container">
                <h1 class="auth-title">Zarejestruj się</h1>

                <form class="auth-form" method="POST" action="/zarejestruj">
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Adres email</label>
                        <input type="email" id="email" name="email" required 
                               placeholder="Wprowadź swój email"
                               class="form-control <%= errors && errors.email ? 'is-invalid' : '' %>"
                               value="<%= formData?.email || '' %>">
                        <% if (errors && errors.email) { %>
                            <div class="invalid-feedback">
                                <%= errors.email.message %>
                            </div>
                        <% } %>
                    </div>

                    <div class="form-group mb-3">
                        <label for="username" class="form-label">Nazwa użytkownika</label>
                        <input type="text" id="username" name="username" required 
                               placeholder="Wybierz nazwę użytkownika"
                               minlength="3" maxlength="30"
                               class="form-control <%= errors && errors.name ? 'is-invalid' : '' %>"
                               value="<%= formData?.username || '' %>">
                        <% if (errors && errors.name) { %> 
                            <div class="invalid-feedback"> 
                                <%= errors.name.message %>
                            </div>
                        <% } %>
                    </div>

                    <div class="form-group mb-3">
                        <label for="password" class="form-label">Hasło</label>
                        <input type="password" id="password" name="password" required 
                               placeholder="Wprowadź hasło"
                               minlength="8"
                               class="form-control <%= errors && errors.password ? 'is-invalid' : '' %>">
                        <% if (errors && errors.password) { %>
                            <div class="invalid-feedback">
                                <%= errors.password.message %>
                            </div>
                        <% } %>
                    </div>

                    <div class="form-group mb-3">
                        <label for="confirmPassword" class="form-label">Potwierdź hasło</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required 
                               placeholder="Wprowadź hasło ponownie"
                               minlength="8"
                               class="form-control">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success w-100">
                            Zarejestruj się
                        </button>
                    </div>

                    <div class="auth-links">
                        <p>Masz już konto? <a href="/zaloguj">Zaloguj się</a></p>
                    </div>
                </form>

                <% if (errors && Object.keys(errors).length > 0) { %>
                <div class="alert alert-danger mt-3">
                    <i class="bi bi-exclamation-triangle"></i> Wystąpiły błędy w formularzu rejestracji!
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>