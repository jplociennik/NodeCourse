<div class="form-group mb-3">
    <label for="name" class="form-label">Nazwa użytkownika</label>
    <input type="text" id="name" name="name" required minlength="3" maxlength="30"
           class="form-control <%= errors && errors.name ? 'is-invalid' : '' %>"
           value="<%= formData?.name || user?.name || '' %>">
    <% if (errors && errors.name) { %>
        <div class="invalid-feedback">
            <%= errors.name.message %>
        </div>
    <% } %>
</div>
<div class="form-group mb-3">
    <label for="password" class="form-label">Nowe hasło</label>
    <input type="password" id="password" name="password" minlength="8"
           class="form-control <%= errors && errors.password ? 'is-invalid' : '' %>"
           placeholder="Zostaw puste, aby nie zmieniać">
    <% if (errors && errors.password) { %>
        <div class="invalid-feedback">
            <%= errors.password.message %>
        </div>
    <% } %>
</div>
<div class="form-group mb-3">
    <label for="confirmPassword" class="form-label">Potwierdź nowe hasło</label>
    <input type="password" id="confirmPassword" name="confirmPassword" minlength="8"
           class="form-control <%= errors && errors.confirmPassword ? 'is-invalid' : '' %>"
           placeholder="Zostaw puste, aby nie zmieniać">
    <% if (errors && errors.confirmPassword) { %>
        <div class="invalid-feedback">
            <%= errors.confirmPassword.message %>
        </div>
    <% } %>
</div> 